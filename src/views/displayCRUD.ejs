<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GET CRUD</title>
  </head>
  <style>
    table,
    th,
    td {
      border: 1px solid black;
      border-collapse: collapse;
    }
    .btn-edit {
      outline: none;
      border: none;
      background: orange;
      height: 25px;
      width: 80px;
      border-radius: 3px;
      cursor: pointer;
    }
    .btn-delete {
      outline: none;
      border: none;
      background: #ff0023;
      height: 25px;
      width: 80px;
      border-radius: 3px;
      cursor: pointer;
    }
  </style>
  <body>
    <table style="width: 100%">
      <tr>
        <th>email</th>
        <th>Tên</th>
        <th>Tên Đệm</th>
        <th>Địa Chỉ</th>
        <th>Số Điện Thoại</th>
        <th>Người Dùng</th>
        <th>Thay Đổi</th>
      </tr>
      <% for(let i=0; i< dataTable.length; i++){ %>
      <tr>
        <td><%= dataTable[i].email %></td>
        <td><%= dataTable[i].firstname %></td>
        <td><%= dataTable[i].lastname %></td>
        <td><%= dataTable[i].address %></td>
        <td><%= dataTable[i].phonenumber %></td>
        <td><%= dataTable[i].roleId %></td>
        <td>
          <a
            href="/edit-crud?id=<%= dataTable[i].id %>"
            class="btn-edit"
            type="button"
            >Chỉnh sửa</a
          >
          <a
            href="/delete-crud?id=<%= dataTable[i].id %>"
            class="btn-delete"
            type="button"
            >Xóa</a
          >
        </td>
      </tr>
      <% } %>
    </table>
  </body>
</html>
